<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/viewmeeting"
        android:textColor="@color/darkFont"
        android:textSize="30sp" >
    </TextView>

    <TextView
        android:id="@+id/CreatorTextAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:text="Meeting Creator"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewMeetingCreator"
        android:layout_marginTop="20dp"
        android:text="Meeting Description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewMeetingCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreatorTextAnchor"
        android:text="Creator"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/viewMeetingDesc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DescriptionText"
        android:text="Description"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/meetingTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewMeetingDesc"
        android:layout_marginTop="20dp"
        android:text="Meeting Time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewMeetingTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/meetingTimeText"
        android:text="Time"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:onClick="acceptViewMeeting"
        android:text="@string/ok" />

</RelativeLayout>