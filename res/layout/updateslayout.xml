<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    xmlns:android1="http://schemas.android.com/apk/res/android">

    
   
    
	 <Button
	 	android1:id="@+id/TestButton"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
		android:clickable="true"
	    android:onClick="Test" >
	</Button>
    
        
        
    <!--  Title -->
    <TextView
    	android1:layout_width="match_parent"
    	android1:layout_height="wrap_content"
    	android1:gravity="center_horizontal"
    	android1:text="Parking"
    	android1:textSize="30sp"
    	android1:textColor="@color/darkFont" >
    </TextView>
        
    <!-- Parking Layout -->
     <LinearLayout
        android1:id="@+id/ParkingLots"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_margin="12dip"
        android1:textSize="12sp"
        android1:orientation="vertical" 
        android1:textColor="@color/darkFont">
        
        <!-- Parking Lots Wrapper -->
        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical"
            android1:layout_margin="12dip">
            
            <!-- example -->
            <TextView
                android1:layout_width="fill_parent"
                android1:layout_height="wrap_content"
                android1:layout_marginBottom="2dip"
                android1:text="Example Parking Lot"
                android1:gravity="center_horizontal|center_vertical"
                android1:background="@color/red"
                android1:textColor="@color/darkFont">     
            </TextView>
            
           
        </LinearLayout>
        <!-- End Parking Lots Wrapper -->
            
    </LinearLayout>
    <!-- end parking layout -->
    
    <!--  Title -->
   	<TextView
	   	android1:layout_width="match_parent"
	   	android1:layout_height="wrap_content"
	   	android1:gravity="center_horizontal"
	   	android1:text="Lift Availability"
	   	android1:textSize="30sp"
	   	android1:textColor="@color/darkFont" >
   	</TextView>
    
    <!-- Lifts Layout -->
    <LinearLayout
        android1:id="@+id/Lifts"
        android1:textSize="12sp"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_margin="12dip"
        android1:orientation="vertical" >    
    </LinearLayout>
    <!-- end Lifts layout -->

    

</LinearLayout>